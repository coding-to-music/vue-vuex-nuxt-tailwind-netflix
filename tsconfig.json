{
  "compilerOptions": {
    "target": "es2018",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["esnext", "dom", "es2017", "es2017.object", "webworker", "webworker.importscripts"],
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": false,
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "pretty": true,
    "sourceMap": true,
    "importHelpers": true,
    "noUnusedParameters": false,
    "jsx": "preserve",
    "downlevelIteration": false,
    "suppressImplicitAnyIndexErrors": true,
    "skipLibCheck": true,
    "noImplicitThis": true,
    "strict": true,
    "allowJs": true,
    "noEmit": true,
    "checkJs": true,
    "baseUrl": "./src/",
    "resolveJsonModule": true,
    "paths": {
      "@components": ["components/index.ts"],
      "@components/*": ["components/*"],
      "@store": ["store/modules/index.ts"],
      "@middleware": ["middleware/index.ts"],
      "@services": ["services/index.ts"],
      "@assets/*": ["assets/*"],
      "@images/*": ["assets/images/*"],
      "@icons/*": ["assets/icons/*"],
      "@constructors": ["constructors/index.ts"],
      "@mixins": ["components/Mixins/index.ts"],
      "@colors": ["styles/colors.module.js"],
      "@utils": ["utils/index.ts"],
      "@models": ["models/index.ts"],
      "~/*": ["*"]
    },
    "types": ["@nuxt/types", "node", "webpack-env"]
  },
  "include": ["./src/**/*.ts", "./src/**/*.js", "./src/**/*.vue", "./config/**/*.ts"],
  "files": ["nuxt.config.ts"],
  "exclude": ["node_modules", "dist", ".nuxt"]
}
