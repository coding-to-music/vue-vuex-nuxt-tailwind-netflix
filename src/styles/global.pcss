*.--FullScreen {
  height: calc(100vh - var(--headerHeight));
}

*.--Scrollable {
  &:after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 25px;
    z-index: 2;

    background: linear-gradient(to top, var(--bg1), rgba(255, 255, 255, 0));
  }
}

*.--FullScreen-ext {
  height: 100vh;
}

ul.listOptions {
  display: flex;
  max-width: 100%;
  flex-flow: row wrap;
  width: 100%;
  padding-left: 0;
  margin: 0;

  li {
    font-weight: bold;
    font-size: 1rem;
    padding: 10px 40px 10px 16px;
    text-align: left;
    width: 100%;
    color: var(--text1);

    &:not(.no-hover) {
      cursor: pointer;
    }

    &:first-child {
      padding-top: 14px;
    }
    &:last-child {
      padding-bottom: 14px;
    }

    &.red {
      color: var(--red);
    }

    &:not(.disabled):not(.no-hover):hover {
      background-color: var(--bg2);
    }

    &.disabled {
      cursor: not-allowed;
      color: var(--text2);
    }
  }

  &[small] {
    li {
      font-size: 14px;
    }
  }
  &[mini] {
    li {
      font-size: 12px;
      padding: 4px 5px;
    }
  }
}

.ellipsis {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  max-width: 100%;
}

.txt-block {
  max-width: 700px;
  white-space: initial;
  display: block;
}

.--Avatar-Mask {
  border-radius: 4px;
  overflow: hidden;
  outline: none;

  &.active {
    border-color: var(--blue);
  }

  &[round] {
    border-radius: 100%;
  }
}

a.link,
span.link {
  font-weight: bold;
  text-decoration: underline;
  cursor: pointer;

  &:hover {
    text-decoration: underline;
  }
}
